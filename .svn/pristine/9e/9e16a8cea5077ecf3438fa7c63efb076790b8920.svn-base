@charset "UTF-8";
  body {
      font-family: Arial, sans-serif;
      background-color: #f3f6f9;
      margin: 0;
      padding: 20px;
    }

    h2, h3 {
      margin: 10px 0;
      color: #2c3e50;
    }

    .container {
      max-width: 1000px;
      margin: 0 auto;
    }

    .box {
      background-color: white;
      padding: 20px;
      margin-bottom: 30px;
      border-radius: 10px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.05);
    }

    .date-range {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      margin-top: 10px;
    }

    .date-range input {
      padding: 6px;
    }

    .section-title {
      text-align: center;
      margin-bottom: 20px;
      font-size: 20px;
      font-weight: bold;
    }

    .charts-row {
      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
      gap: 20px;
    }

    .chart-block {
      width: 45%;
      text-align: center;
    }

    .chart-title {
      margin-bottom: 10px;
      font-weight: bold;
      font-size: 16px;
    }

    canvas {
      max-width: 100%;
      height: auto;
    }
    
    