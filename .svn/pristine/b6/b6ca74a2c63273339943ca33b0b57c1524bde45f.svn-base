	}
	
	.modal-buttons {
	  display: flex;
	  justify-content: center;
	  gap: 10px;
	  margin-top: 12px;
	}
	
	.modal-buttons button {
	  width: 80px;
	  height: 30px;
	  font-size: 13px;
	  border-radius: 6px;
	  border: none;
	  cursor: pointer;
	}
	
